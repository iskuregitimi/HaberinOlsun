@using HaberinOlsun.WebUI.Models
@model  HomePageModel

@{
    ViewBag.Title = "getbyCategory";
    Layout = "~/Views/LayoutPageTr.cshtml";
}

<section class="ptb-0">
    <div class="mb-30 brdr-ash-1 opacty-5"></div>
    <div class="container">
        <a class="mt-10" href="#"><i class="mr-5 ion-ios-home"></i>Anasayfa<i class="mlr-10 ion-chevron-right"></i></a>
        <a class="mt-10" href="#">Kategori</a>
    </div><!-- container -->
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <h4 class="p-title"><b>@Model.Kategori.Adi Haberleri</b></h4>
                <div class="row">
                    @foreach (var item in Model.Haberler)
                    {
                    <a class="oflow-hidden pos-relative mb-10 dplay-block" href="/News/NewsDetail/@item.HaberId">
                        <div class="col-sm-6">
                            <img src="@item.ResimURL"  alt="" height="200">
                            <h4 class="pt-0" style="height:60px"><a href="#"><b>@item.Baslik</b></a></h4>
                            <ul class="list-li-mr-20 mb-50">
                                <li class="color-lite-black">
                                    by <a href="#" class="color-black"><b>@item.Kaynak</b></a>
                                    @item.Tarih
                                </li>
                                <li><i class="color-primary mr-5 font-12 ion-ios-bolt"></i>@item.OkunmaSayisi</li>
                            </ul>
                        </div><!-- col-sm-6 -->
                    </a>
                    }
                </div><!-- row -->

                <a class="dplay-block btn-brdr-primary mt-20 mb-md-50" href="#"><b>LOAD MORE</b></a>
            </div><!-- col-md-9 -->

            <div class="d-none d-md-block d-lg-none col-md-3"></div>
            <div class="col-md-6 col-lg-4">
                <div class="pl-20 pl-md-0">
                    <div>
                        <h4 class="p-title"><b>KÖŞE YAZARLARI</b></h4>
                        @foreach (var item in @Model.Yazarlar)
                        {
                            <a class="oflow-hidden pos-relative mb-20 dplay-block" href="/CornerPost/getCornerPost/@item.YazarId">
                                <div class="wh-100x abs-tlr"><img src="@item.ResimURL" height="100%"></div>
                                <div class="ml-120 min-h-100x">
                                    <h5><b>@item.AdiSoyadi</b></h5>
                                </div>
                            </a><!-- oflow-hidden -->
                        }
                    </div><!-- mtb-50 -->
                </div><!--  pl-20 -->
            </div><!-- col-md-3 -->
        </div><!-- row -->
    </div><!-- container -->
</section>

