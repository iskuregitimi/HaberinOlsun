@model HaberinOlsun.WebUI.Models.HomePageModel

@{
    ViewBag.Title = "getCornerPost";
    Layout = "~/Views/LayoutPageTr.cshtml";
}


<section>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6">
            <h2 class="mt-30"><b>@Html.DisplayFor(model => model.KoseYazisi.Ozet)</b></h2>
            <br />
            <div class="col-md-3">
                <img src="@Html.DisplayFor(model => model.KoseYazisi.Yazarlar.ResimURL)" alt="" height="150">
            </div>
            <ul class="list-li-mr-20 mtb-15">
                <li><a href="#"><b>@Html.DisplayFor(model => model.KoseYazisi.Yazarlar.AdiSoyadi) </b></a> @Html.DisplayFor(model => model.KoseYazisi.Tarih)</li>
            </ul>
            <div class="quote-primary mtb-20">
                <br />
                <h5>@Html.DisplayFor(model => model.KoseYazisi.Detay)</h5>
            </div><!-- quote-primary -->
            <div class="brdr-ash-1 opacty-5"></div>
        </div><!-- col-md-6 -->
        <div class="col-md-4"></div>
        <div class="d-none d-md-block d-lg-none col-md-3"></div>
    </div>


    <section>
        <div class="container">
            <h4 class="mb-50" style="color:seagreen"><b>YAZARIN DİĞER YAZILARI</b></h4>
        </div><!-- container -->
        <div class="container">
            @foreach (var item in Model.DigerKoseYazilari)
            {
                <div class="accordian">
                    <h6>
                        <a data-accordian="#accordian-4" class="a-title" href="/CornerPost/getOtherCornerPost/@item.YazarId,@item.YaziId">
                            @*<a class="oflow-hidden pos-relative mb-20 dplay-block" href="/CornerPost/getOtherCornerPost/@item.YazarId,@item.YaziId">*@
                            <span><h4><b>@item.Ozet</b></h4></span><br />
                            <span>Yayın Tarihi:@item.Tarih</span>
                        </a>
                    </h6>
                </div><!-- accordian -->
            }
        </div><!-- container -->
    </section>



