@using Haberci.DAL
@using Haberci.BLL


@{ 
    List<Yazarlar> yazarlar = YazarBLL.yazargetir();
}

<div class="single-sidebar-widget p-30">
    <!-- Section Title -->
    <div class="section-heading" style="color :cornflowerblue ; background-color:white;">
        <b>KÖŞE YAZARLARI</b>
    </div>




    @foreach (var item in yazarlar)
    {<!-- Single Blog Post -->
        <div class="single-blog-post d-flex">

            <div class="post-thumbnail">
                <img src="@item.ResimUrl" alt="">
            </div>

            <div class="post-content">
                <a href="single-post.html" class="post-title">@item.AdiSoyadi</a>
                <a href="/Home/KoseYazilari/@item.YazarId ">Detay için tıklayın</a>
                <div class="post-meta d-flex justify-content-between">

                    <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> 34</a>
                   
                  
                </div>
            </div>

        </div>
    }
</div>