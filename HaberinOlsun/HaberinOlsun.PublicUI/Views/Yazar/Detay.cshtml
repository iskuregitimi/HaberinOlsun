@using HaberinOlsun.ENTITY
    @model List<KoseYazilari>

@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section>
    <h4 class="p-title"><b>Haberler</b></h4>
    <div class="row">
        @foreach (KoseYazilari item in Model)
        {
            <div class="col-md-10">
              
                <h4 class="pt-20"><a href="/Yazar/YaziDetay/@item.YaziId"><b>@item.Ozet</b></a></h4><br />
                <ul class="list-li-mr-20 pt-10 pb-20">
                    <li class="color-lite-black">
                        by <a href="#" class="color-black"><b>@item.Yazar.AdiSoyadi</b></a>
                        @item.YaziTarih<br />
                    </li>
                </ul>
                <hr />
            </div><!-- col-sm-6 -->

        }
    </div><!-- row -->
</section>

