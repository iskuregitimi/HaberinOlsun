@model HaberinOlsun.ENTITY.KoseYazilari
@{
    ViewBag.Title = "YaziDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h4 class="p-title"><b>Yazının İçeriği</b></h4>
    <div class="row">
        <div class="col-md-12">
            <h3 class="mt-30"><b>@Html.DisplayFor(model => model.Ozet)</b></h3>
            <ul class="list-li-mr-20 mtb-15">
                <li>by <a href="#"><b>@Html.DisplayFor(model => model.Yazar.AdiSoyadi) </b></a> @Html.DisplayFor(model => model.YaziTarih)</li>
            </ul>
            <p class="mtb-15">
                @Html.DisplayFor(model => model.Detay)
            </p>
            <div class="quote-primary mtb-20">
                <h5>"@Html.DisplayFor(model => model.Ozet)"</h5>
                <h5 class="mt-15"><b>@Html.DisplayFor(model => model.Yazar.AdiSoyadi)</b></h5>
            </div><!-- quote-primary -->

            <div class="brdr-ash-1 opacty-5"></div>
        </div><!-- col-md-9 -->

        <div class="d-none d-md-block d-lg-none col-md-3"></div>
    </div>
   
</section>
