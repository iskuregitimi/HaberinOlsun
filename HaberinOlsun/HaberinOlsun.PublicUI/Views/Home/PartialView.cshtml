@using HaberinOlsun.BLL
@using HaberinOlsun.ENTITY

@{
    HaberBLL haberbll = new HaberBLL();
    List<Haber> haber = haberbll.GetHabers();


}
<!--Slider Start-->
<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @foreach (Haber item in haber)
            {
                if (item.OkunmaSayisi == haber.Max(x => x.OkunmaSayisi))
                {
                    <div class="carousel-item active">
                        <a href="Haber/Index/@item.HaberId">
                            <img class="d-block w-100" src="@item.ResimURL">
                        </a>
                    </div>

                }
                else
                {
                    <div class="carousel-item">
                        <a href="Haber/Index/@item.HaberId">
                            <img class="d-block w-100" src="@item.ResimURL">
                        </a>
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--Slider End-->
