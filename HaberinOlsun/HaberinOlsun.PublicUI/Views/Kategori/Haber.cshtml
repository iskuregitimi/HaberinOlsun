@using HaberinOlsun.Entity
@model IQueryable<HaberKateModel>

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="icon" href="img/core-img/favicon.ico">
    <link href="~/css/style.css" rel="stylesheet" />

</head>

<body>
    <div class="featured-post-area">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-8">
                    <div class="row">
                        @foreach (var item in Model.OrderByDescending(x=>x.Tarih))
                        {
                            <div class="col-12 col-lg-5">
                                <div class="single-blog-post featured-post-2">
                                    <div class="post-thumb">
                                        <a href="/Haber/Detay/@item.ID"><img src="@item.ResimURL" style="height:300px;width:300px;" alt=""></a>
                                    </div>
                                    <div class="post-data">
                                        <a href="/Haber/Detay/@item.ID" class="post-catagory">@item.Baslik</a>
                                        <div class="post-meta">
                                            <a href="/Haber/Detay/@item.ID" class="post-title">
                                                <h6>@item.Ozet</h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/js/jquery/jquery-2.2.4.min.js"></script>
    <script src="~/js/bootstrap/popper.min.js"></script>
    <script src="~/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/js/plugins/plugins.js"></script>
    <script src="~/js/active.js"></script>
</body>
</html>