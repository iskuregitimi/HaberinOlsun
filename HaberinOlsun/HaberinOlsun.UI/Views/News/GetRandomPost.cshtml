@using HaberinOlsun.UI.Models
@model  HomePageModel

<!-- >>>>>>>>>>>>>>>>>>>>
 Post Left Sidebar Area
<<<<<<<<<<<<<<<<<<<<< -->
<div class="post-sidebar-area left-sidebar mt-30 mb-30 bg-white box-shadow">
    <!-- Sidebar Widget -->
    <div class="single-sidebar-widget p-30">
        <!-- Section Title -->
        <div class="section-heading">
            <h5>HABERLER</h5>
        </div>
        @foreach (var Haber in Model.Haberler)
        {
            <!-- Single Blog Post -->
            <div class="single-blog-post d-flex">
                <div class="post-thumbnail">
                    <img src="@Haber.ResimURL" alt="">
                </div>
                <div class="post-content">
                    <a href="/News/GetPost/@Haber.HaberID" class="post-title">@Haber.Baslik</a>
                    <div class="post-meta d-flex justify-content-between">
                        <a href="#"><i class="fa fa-eye" aria-hidden="true"></i>@Haber.OkunmaSayisi</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Sidebar Widget -->
    <div class="single-sidebar-widget">
        <a href="#" class="add-img"><img src="/img/bg-img/add.png" alt=""></a>
    </div>


</div>